      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-8 col-sm-12 mx-auto">
            <div class="container-fluid mt-0 bg-dark text-light p-3">
              <div class="form-group">
                <button
                  onclick="login()"
                  id="btn-login"
                  type="submit"
                  class="btn text-light mt-2"
                  style="background-color: #6c63ff; width: 100%"
                >
                  EthAuth
                </button>
