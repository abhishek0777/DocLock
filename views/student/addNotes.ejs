              <form action="/student/addNotes" method="POST">
                
                <div class="form-group">
                  <label>Text Title</label>
                  <input
                    type="text"
                    name="title"
                    class="form-control"
                    id="fileName"
                    aria-describedby="emailHelp"
                    placeholder="Enter file name"
                  />
                </div>
                <div class="form-group">
                  <label>File Description</label>
                  <textarea
                    
                    name="text"
                    class="form-control"
                    id="fileDescription"
                    aria-describedby="emailHelp"
                    placeholder="Enter file description"
                  ></textarea>
                </div>
                
                
